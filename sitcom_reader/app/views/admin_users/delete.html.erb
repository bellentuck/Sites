<% @page_title = "Delete Admin User" %>

<div class="btn" role="button"><%= link_to("<< Back to List", admin_users_path, :class => 'back-link') %></div>

<div class="admin users delete">
  <h2>Delete Admin User</h2>

  <%= form_for(@admin_user, :method => 'delete') do |f| %>

    <p>Click below to confirm: the record for</p>

    <p class="reference-name"><%= f.object.username %></p>

    <p>will be deleted.</p>

    <div class="form-buttons">
      <%= f.submit("Delete Admin User") %>
    </div>

  <% end %>
</div>
