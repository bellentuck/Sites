<!-- http://localhost:3000/admin_users -->
<% @page_title = "All Admin Users" %>

<div class="btn" role="button"><%= link_to("<< Admin Menu", admin_path, :class => 'back-link') %></div>

<div class="admin users index">
  <h2>Admin Users</h2>

  <!-- <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %> -->
  <div class="btn" id="add_new" role="button"><%= link_to("Add New Admin User", new_admin_user_path, :class => 'action new') %></div>
  <div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin User list">
    <tr class="header">
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr>
      <td><%= admin_user.username %></td>
      <td><%= admin_user.email %></td>
      <td class="actions">
        <div class="btn" role="button"><%= link_to("Edit", edit_admin_user_path(admin_user), :class => 'action edit') %></div>
        <div class="btn" role="button"><%= link_to("Delete", delete_admin_user_path(admin_user), :class => 'action delete') %></div>
      </td>
    </tr>
    <% end %>
  </table>
</div>
