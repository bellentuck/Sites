<% @page_title = "Delete Section" %>

<%= link_to("<< Back to List", sections_path(:page_id => @page.id), :class => 'back-link') %>

<div class="sections delete">
  <h2>Delete Section</h2>

  <%= form_for(@section, :url => section_path(@section, :page_id => @page.id), :method => 'delete') do |f| %>
    <!-- Don't have to specify url- :url => section_path(@section)
    but do have to specify the method is 'delete'-->

    <p>Are you sure you want to permanently delete this section?</p>

    <p class="reference-name"><%= f.object.name %></p>
    <!-- "hey form builder, whatever object you were just given, bring that up now. i need to use that"-->

    <div class="form-buttons">
      <%= f.submit("Delete Section") %>
    </div>

  <% end %>
</div>
